<div class="container">
<h1>Muestras de Calibre</h1>
<table class = "table table-striped">
  <thead>
    <tr>
      <!-- TODO: Considerar omitir frutos en muestra y peso muestra  -->
      <th>Responsable</th>
      <th>Tarja</th>
      <th>Frutas x libra</th>
      <th>Calibre</th>
      <th>Frutos en muestra</th>
      <th>Peso muestra</th>
      <th>Creacion</th>
      <th>Desviaci√≥n</th>
      <th>Estado</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caliber_samples.each do |caliber_sample| %>
      <tr>
        <td><%= caliber_sample.responsable %></td>
        <td><%= caliber_sample.element.tag %></td>
        <td><%= caliber_sample.fruits_per_pound %></td>
        <td><%= caliber_sample.caliber.name %></td>
        <td><%= caliber_sample.fruits_in_sample %></td>
        <td><%= caliber_sample.sample_weight %></td>
        <td><%= date_time(caliber_sample.created_at) %></td>

        <td><%= caliber_sample.deviation_sample.deviation.round(0) if caliber_sample.deviation_sample  %></td>

        <%if caliber_sample.deviation_sample%>
          <td><%= caliber_sample.deviation_sample.status%></td>
        <%else%>
          <td>no aplica</td>
        <%end%>


        <td><%= link_to 'Ver', caliber_sample %></td>
        <td><%= link_to 'Editar', edit_caliber_sample_path(caliber_sample) %></td>
        <td><%= link_to 'Eliminar', caliber_sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva muestra de calibre', new_caliber_sample_path %>
</div>
