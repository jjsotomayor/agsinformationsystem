  <% url = set_url_for_form(type, caliber_sample) %>
  <% method =  set_form_method(type)%>

  <%= form_for(caliber_sample,  url: url, method: method, html: {class: 'inside-new-form blue-inside-new-form'}) do |f| %>
  <!-- , autocomplete: :off -->

    <%= f.hidden_field :responsable, value: logged_user.name %>

    <% if type == "new"  %>
      <div class="field">
        <%= f.label :Tarja %>
        <%= text_field_tag :tag %>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :peso_muestra %>
      <%= f.number_field :sample_weight, placeholder: " gramos" %>
    </div>
    <div class="field">
      <%= f.label :frutos_en_muestra %>
      <%= f.number_field :fruits_in_sample %>
    </div>


    <% if @include_deviation%>
    <p>------------------------- Desviación ------------------------</p>
        <div class="field">
          <% value = type == "edit" ? caliber_sample.deviation_sample.big_fruits_in_sample : ""  %>
          <%= f.label :frutos_grandes %>
          <%= number_field_tag :big_fruits_in_sample, value,  placeholder: ' cantidad' %> <!--, min: 1, max: 1000  -->
        </div>

        <div class="field">
          <% value = type == "edit" ? caliber_sample.deviation_sample.small_fruits_in_sample : ""  %>
          <%= f.label :frutos_pequeños %>
          <%= number_field_tag :small_fruits_in_sample, value, placeholder: ' cantidad'%>
        </div>

    <% end %>

    <%= render 'shared/buttons', f: f, form_type: type%>
  <% end %>
