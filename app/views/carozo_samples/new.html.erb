<%= render 'shared/message_success_js', carozo_sample: @carozo_sample %>
<%= render 'form', carozo_sample: @carozo_sample %>

<div class="container-500px">
  <h1>Ultimos muestras de carozo</h1>
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Creacion</th>
      <th>Tarja</th>
      <th>Responsable</th>
      <th>Con carozo (gr)</th>
      <th>Peso muestra (gr)</th>
      <th>Porcentaje carozo</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carozo_samples.each do |carozo_sample| %>
      <tr>
        <td><%= time(carozo_sample.created_at)%></td>
        <td><%= carozo_sample.element.tag %></td>
        <td><%= carozo_sample.responsable %></td>
        <td><%= carozo_sample.carozo_weight %></td>
        <td><%= carozo_sample.sample_weight %></td>
        <td><%= carozo_sample.carozo_percentage %></td>

        <td><%= carozo_sample.status %></td>

        <td><%= link_to 'Editar', edit_carozo_sample_path(carozo_sample) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Todas las muestras de carozo', carozo_samples_path %>
</div>
