<p id="notice"><%= notice %></p>


<div class="container">
<h1>Drying Methods</h1>
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drying_methods.each do |drying_method| %>
      <tr>
        <td><%= drying_method.name %></td>
        <td><%= link_to 'Show', drying_method %></td>
        <td><%= link_to 'Edit', edit_drying_method_path(drying_method) %></td>
        <td><%= link_to 'Destroy', drying_method, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drying Method', new_drying_method_path %>
