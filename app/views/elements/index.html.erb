<p id="notice"><%= notice %></p>


  <div class="container">
    <h1>Elements</h1>
  <table class = "table table-striped">
  <thead>
    <tr>
      <th>Tag</th>
      <th>Lot</th>
      <th>Process order</th>
      <th>Product type</th>
      <th>Drying method</th>
      <th>Previous usda</th>
      <th>Ex tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @elements.each do |element| %>
      <tr>
        <td><%= element.tag %></td>
        <td><%= element.lot %></td>
        <td><%= element.process_order %></td>
        <td><%= element.product_type.name %></td>
        <td><%= element.drying_method.name %></td>
        <td><%= element.previous_usda %></td>
        <td><%= element.ex_tag %></td>
        <td><%= link_to 'Show', element %></td>
        <td><span class="glyphicon glyphicon-pencil"></span><%= link_to ' Editar', edit_element_path(element), 'data-toggle': 'tooltip',  title: 'Editar el producto' %></td>
        <td><span class="glyphicon glyphicon-trash"><%= link_to 'Eliminar', element, method: :delete, data: { confirm: 'Estas seguro? Esto podria ser irreversible' } %></td>


      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

