      <th>Producto</th>
      <th>Tipo secado</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @elements_groups.each do |group| %>
      <tr class= "<%= colored_rows_with_color(group.color)%>">
