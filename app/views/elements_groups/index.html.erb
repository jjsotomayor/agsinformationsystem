<%= render 'shared/message_js', message: @message if @message %>

<div class= "container-table">
<h2 class= "centered separated">Grupos de tarjas creados</h2>
<%= link_to 'Nuevo grupo de tarjas', new_elements_group_path,  class: "btn btn-primary btn-xs to-left" %>
<br><%= paginate @elements_groups %>
<table class = "table table-striped table-tight">
  <thead>
