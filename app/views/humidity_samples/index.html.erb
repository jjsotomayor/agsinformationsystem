
<div class="container">
<h1>Muestras de Humedad</h1>
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Elemento</th>
      <th>Responsable</th>
      <th>Humedad</th>
      <th>Estado</th>
      <th>Creacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @humidity_samples.each do |humidity_sample| %>
      <%if humidity_sample.status == "aprobado" %>
      <tr class="success">
      <%else%>
      <tr class= "danger">
        <%end%>

        <td><%= humidity_sample.element.tag %></td>
        <td><%= humidity_sample.responsable %></td>
        <td><%= humidity_sample.humidity %></td>
        <td><%= humidity_sample.status %></td>
        <td><%= date_time(humidity_sample.created_at) %></td>
        <td><%= link_to 'Ver', humidity_sample %></td>
        <td><%= link_to 'Editar', edit_humidity_sample_path(humidity_sample) %></td>
        <td><%= link_to 'Eliminar', humidity_sample, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Ingresar muestra de humedad', new_humidity_sample_path %>
</div>
