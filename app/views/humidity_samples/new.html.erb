<%= render 'shared/message_success_js', sample: @success_sample if  @success_sample%>
<%= render 'form_new', humidity_sample: @humidity_sample %>

<div class="container-500px">
  <h1>Ultimos muestras de humedad</h1>
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Tarja</th>
      <th>Responsable</th>
      <th>Humedad</th>
      <th>Estado</th>
      <th>Creacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @humidity_samples.each do |humidity_sample| %>
      <tr>
        <td><%= humidity_sample.element.tag %></td>
        <td><%= humidity_sample.responsable %></td>
        <td><%= humidity_sample.humidity %></td>
        <td><%= humidity_sample.status %></td>
        <td><%= time(humidity_sample.created_at)%></td>

        <td><%= link_to 'Editar', edit_humidity_sample_path(humidity_sample) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Todas las muestras de humedad', humidity_samples_path %>
</div>
