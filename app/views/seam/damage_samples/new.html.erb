<%= render 'shared/message_success_js', sample: @success_sample if  @success_sample%>
<%= render 'shared/errors', sample: @damage_sample%>
<%= render 'shared_damage_samples/form_calling', damage_sample: @damage_sample, type: "new"%>

<div class="container-last-samples damages">
  <h3>Tus ultimas muestras de daños en <%=process_name%></h3>

  <table class = "table table-striped">
    <thead>
      <tr>
        <th></th>
        <%=common_table_headers%>
        <th>Tipo</th>
        <th>USDA</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @damage_samples.each do |damage_sample| %>
        <tr>
          <td><%= time(damage_sample.created_at) %></td>
          <%=common_table_body(damage_sample)%>
          <td><%= damage_sample.element.drying_method.name %></td>
          <td><%= damage_sample.usda.truncate(10) %></td>
          <td><%= link_to 'Ver', seam_damage_sample_path(damage_sample),  class: "btn btn-primary btn-xs"%></td>
          <!-- link_to 'Ver', new_secado_damage_sample_path(id_show: damage_sample.id), class: "see-sample", id_show: damage_sample.id -->
          <td><%= link_to 'Editar', edit_seam_damage_sample_path(damage_sample, process: @process),  class: "btn btn-warning btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


<%= link_to 'Todas las muestras de daños en '+ process_name, seam_damage_samples_path,  class: "btn btn-primary btn-xs" %>
</div>
<br>
