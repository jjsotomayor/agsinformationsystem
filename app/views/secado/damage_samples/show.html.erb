<div class= "container-for-sample">

  <div class= "title-show">
    <h2 class= "centered separated">Muestra daños #<%=@damage_sample.id%></h2>
  </div>

  <table class = "table table-striped table-tight">
    <thead>
      <tr>
        <th>Creacion</th>
        <th>Responsable</th>
        <th>Tarja</th>
        <th>Tipo</th>
        <th>USDA</th>
        <th>DF07</th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%=date_time(@damage_sample.created_at)%></td>
          <td><%= @damage_sample.responsable %></td>
          <td><%= @damage_sample.element.tag%></td>
          <td><%= @damage_sample.element.drying_method.name%></td>
          <td><%= @damage_sample.usda %></td>
          <td><%= short_status(@damage_sample) %></td> <!--TODO check if it works everywhere-->
        </tr>
    </tbody>
  </table>
  <br>

  <table class = "table table-striped display-weight">
    <thead>
      <tr>
        <th>Peso muestra</th>
        <th><%=@damage_sample.sample_weight%> g</th>
      </tr>
    </thead>
  </table>


  <br>
  <table class = "table table-striped display-damages">
    <thead>
      <tr>
        <th>Daño</th>
        <th>g</th>
        <th>%</th>
      </tr>
    </thead>


    <tbody>

      <%@damages_list.each do |dam|%>
        <tr>
          <td><%=translate_damage(dam)%></td>
          <td><%=@damage_sample.send(dam)%></td>
          <td><%=round_or_nil(@damage_sample.send(dam+ "_perc"), 1)%></td>
        </tr>
      <%end%>
    </tbody>
  </table>

  <br>

  <div class = "links-below-show" >
  <%= link_back_from_show(user_type)%> <!-- Link to new or index  -->
</div>
</div>




