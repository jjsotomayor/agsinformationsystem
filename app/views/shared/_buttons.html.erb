
<% if form_type == "new" %>
  <div class="actions">
    <%= f.submit "Guardar",  class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% else%>
  <div class="buttons-together-edit">
    <%= link_to 'Regresar', :back, class: "btn-back btn btn-primary btn-lg "%>
    <%= f.submit "Editar", class: "btn-edit btn btn-warning btn-lg" %>
  </div>
<% end %>
