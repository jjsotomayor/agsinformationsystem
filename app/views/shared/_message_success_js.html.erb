
<%if session[:display_created_alert] and params[:status] %>
  <script>swal("Muestra almacenada!", "Estado: <%=params[:status]%>", "success");</script>
  <%session[:display_created_alert] = false%>
<%elsif session[:display_edited_alert] and params[:status]%>
  <script>swal("Muestra editada!", "Estado: <%=params[:status]%>", "success");</script>
  <%session[:display_edited_alert] = false%>
<%end%>
