<%if session[:display_created_alert] and params[:status] %>
  <%title = "Muestra almacenada!"%>
  <%session[:display_created_alert] = false%>
<%elsif session[:display_edited_alert] and params[:status]%>
  <%title = "Muestra editada!"%>
  <%session[:display_edited_alert] = false%>
<%end%>


<%if params[:status] %>
<!--TODO parametros se deberian pasar como variables de vistas(@) y no como get_param -->
<!-- TODO para damage samples, esto deberia ser  df07:  -->
  <%msg = "Estado: #{params[:status]}"%>
<%end%>

<%if params[:usda] %>
  <%msg << " Usda: #{params[:usda]}"%>
<%end%>

<%if title%>
  <script>swal("<%=title%>", "<%=msg%>", "success");</script>
<%end%>

