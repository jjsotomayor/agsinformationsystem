<%= render 'shared/message_success_js', sample: @success_sample if  @success_sample%>
<%= render 'form', sorbate_sample: @sorbate_sample %>

<div class="container-last-samples sorbate">
  <h3>Tus ultimas muestras de Sorbato</h3>
<table class = "table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Tarja</th>
      <th>Resp.</th>
      <th>Sorbato</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sorbate_samples.each do |sorbate_sample| %>
      <tr>
        <td><%= time(sorbate_sample.created_at)%></td>
        <td><%= sorbate_sample.element.tag %></td>
        <td><%= sorbate_sample.responsable.truncate(12) %></td>
        <td><%= sorbate_sample.sorbate %></td>
        <td><%= sorbate_sample.status %></td>

        <td><%= link_to 'Editar', edit_sorbate_sample_path(sorbate_sample) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Todas las muestras de Sorbato', sorbate_samples_path %>
</div>
