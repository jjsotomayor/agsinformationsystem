<div class="container">
<h1>Muestras de Calibre</h1>
<table class = "table table-striped">
  <thead>
    <tr>
      <!-- TODO: Considerar omitir frutos en muestra y peso muestra  -->
      <th>#</th>
      <th>Creación</th>
      <th>Responsable</th>
      <th>Tarja</th>
      <th>Peso muestra (gr)</th>
      <th>Frutos en muestra</th>
      <th>Frutos x libra</th>
      <th>Calibre</th>
      <th>Desviación</th>
      <th>Estado</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caliber_samples.each do |caliber_sample| %>
      <tr>
        <td><%= caliber_sample.counter %></td>
        <td><%= date_time(caliber_sample.created_at) %></td>
        <td><%= caliber_sample.responsable.truncate(14) %></td>
        <td><%= caliber_sample.element.tag %></td>
        <td><%= caliber_sample.sample_weight %></td>
        <td><%= caliber_sample.fruits_in_sample %></td>
        <td><%= caliber_sample.fruits_per_pound %></td>
        <td><%= caliber_sample.caliber.name %></td>

        <td><%= caliber_sample.deviation_sample.deviation.round(0) if caliber_sample.deviation_sample  %></td>

        <%if caliber_sample.deviation_sample%>
          <td><%= caliber_sample.deviation_sample.status%></td>
        <%else%>
          <td>no aplica</td>
        <%end%>


        <td><%= link_to 'Ver', tcc_caliber_sample_path(caliber_sample),  class: "btn btn-primary btn-xs" %></td>
        <%if access_edit_delete_sample_button%>
          <td><%= link_to 'Editar', edit_tcc_caliber_sample_path(caliber_sample),  class: "btn btn-warning btn-xs" %></td>
          <td><%= link_to 'Eliminar', tcc_caliber_sample_path(caliber_sample), method: :delete, data: { confirm: '¿Seguro que deseas eliminar la muestra?' },  class: "btn btn-danger btn-xs" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva muestra de calibre', new_tcc_caliber_sample_path,  class: "btn btn-primary btn-xs" %>
</div>
