  <% url = set_url_for_form(type, caliber_sample) %>
  <% method =  set_form_method(type)%>

  <%= form_for(caliber_sample,  url: url, method: method, html: {class: 'inside-new-form validatable'}) do |f| %>
  <!-- , autocomplete: :off -->

    <%= f.hidden_field :responsable, value: logged_user.name %>

    <% if type == "new"  %>
      <div class="field">
        <%= f.label :Tarja %>
        <%= text_field_tag :tag, '', autocomplete: 'off' %>
      </div>
    <% end %>


    <div class="field">
      <%= f.label :"con/sin carozo" %>
      <%
      # text_field_tag :drying_method_id, '', class: "vertical" 4
      %>
      <%= f.select :is_ex_caliber,  options_for_select([{text: "sin_carozo", val: false},{text: "con_carozo", val: true}].map{|h| [h[:text],h[:val]]}), include_blank: true%>
    </div>
    <!-- <div class="field">
      <%= f.label :peso_muestra %>
      <%= f.number_field :sample_weight, placeholder: " gramos" %>
    </div> -->

    <div class="field">
      <%= f.label :"peso_muestra (g)" %>
      <%= field_sample_weight(f) %>
    </div>
    <div class="field">
      <%= f.label :frutos_en_muestra %>
      <%= f.number_field :fruits_in_sample, min:0 %>
    </div>


    <% if @include_deviation%>
    <p>------------------ Desviación (en 2.830g) -----------------</p>
        <div class="field">
          <%= f.label :frutos_grandes %>
          <%= field_big_fruits_in_sample(type, caliber_sample) %>
        </div>

        <div class="field">
          <%= f.label :frutos_pequeños %>
          <%= field_small_fruits_in_sample(type, caliber_sample) %>
        </div>

    <% end %>

    <%= render 'shared/buttons', f: f, form_type: type%>
  <% end %>
