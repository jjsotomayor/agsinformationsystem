
<div class="container">
<h1>Muestras de Carozo</h1>
<table class = "table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Creación</th>
      <th>Responsable</th>
      <th>Tarja</th>
      <th>Con carozo (gr)</th>
      <th>Peso muestra (gr)</th>
      <th>Porcentaje carozo (%)</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carozo_samples.each do |carozo_sample| %>
      <tr class= "<%= colored_rows(carozo_sample)%>">
        <td><%= carozo_sample.counter %></td>
        <td><%= date_time(carozo_sample.created_at)%></td>
        <td><%= carozo_sample.responsable %></td>
        <td><%= carozo_sample.element.tag %></td>
        <td><%= carozo_sample.carozo_weight %></td>
        <td><%= carozo_sample.sample_weight %></td>
        <td><%= carozo_sample.carozo_percentage %></td>
        <td><%= carozo_sample.status %></td>

        <td><%= link_to 'Ver', tsc_carozo_sample_path(carozo_sample), class: "btn btn-primary btn-xs" %></td>
        <%if access_edit_delete_sample_button%>
          <td><%= link_to 'Editar', edit_tsc_carozo_sample_path(carozo_sample), class: "btn btn-warning btn-xs" %></td>
          <td><%= link_to 'Eliminar', tsc_carozo_sample_path(carozo_sample), method: :delete, data: { confirm: '¿Seguro que deseas eliminar la muestra?' }, class: "btn btn-danger btn-xs" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Nueva muestra de carozo', new_tsc_carozo_sample_path, class: "btn btn-primary btn-xs" %>
</div>
