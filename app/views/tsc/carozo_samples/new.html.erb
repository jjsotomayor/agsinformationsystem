<%= render 'shared/message_success_js', sample: @success_sample if  @success_sample%>
<%= render 'shared/message_wrong_process_error_js', tag: @element.tag if session[:display_wrong_process_alert]%>
<%= render 'form', carozo_sample: @carozo_sample %>

<div class="container-last-samples carozo">
  <h3>Tus ultimas muestras de carozo</h3>
<table class = "table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Tarja</th>
      <th>Resp.</th>
      <th>Con carozo (gr)</th>
      <th>Peso muestra (gr)</th>
      <th>Porcentaje carozo (%)</th>
      <!-- <th>Estado</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carozo_samples.each do |carozo_sample| %>
      <tr>
        <td><%= time(carozo_sample.created_at)%></td>
        <td><%= element_link(carozo_sample.element) %></td>
        <td><%= carozo_sample.responsable.truncate(10) %></td>
        <td><%= carozo_sample.carozo_weight %></td>
        <td><%= carozo_sample.sample_weight %></td>
        <td><%= carozo_sample.carozo_percentage %></td>

        <!-- <td> short_status(carozo_sample) </td> -->

        <td><%= link_to 'Editar', edit_tsc_carozo_sample_path(carozo_sample), class: "btn btn-warning btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Todas las muestras de carozo', tsc_carozo_samples_path, class: "btn btn-primary btn-xs" %>
</div>
